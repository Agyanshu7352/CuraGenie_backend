# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Database Configuration
MONGO_URI=mongodb://localhost:27017/mediguide_ai
# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/mediguide_ai

# JWT Configuration
JWT_SECRET_KEY=jwt-secret-change-in-production

# File Upload Configuration
MAX_CONTENT_LENGTH=10485760  # 10MB in bytes
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed

# OCR Configuration (if using external OCR service)
OCR_API_KEY=your-ocr-api-key
OCR_API_URL=https://api.ocr.space/parse/image

# OpenAI Configuration (optional, for enhanced AI analysis)
OPENAI_API_KEY=your-openai-api-key

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (if using Celery for background tasks)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=mediguide.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Security Headers
SECURITY_HEADERS=True

# File Storage (local or cloud)
STORAGE_TYPE=local
# For cloud storage:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1

# Database Backup (optional)
BACKUP_ENABLED=False
BACKUP_S3_BUCKET=your-backup-bucket

# Monitoring and Analytics (optional)
ANALYTICS_ENABLED=False
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Error Reporting (optional)
SENTRY_DSN=your-sentry-dsn

# Production Settings
PRODUCTION=False
PREFERRED_URL_SCHEME=http
# For production:
# PRODUCTION=True
# PREFERRED_URL_SCHEME=https